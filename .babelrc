{
  "env": {
    "development": {
      "presets" : ["env", "stage-0", "react"],
      "plugins" : ["react-hot-loader/babel", ["transform-runtime", { "polyfill": false }]]
    },
    "test": {
      "presets" : ["env", "stage-0", "react"]
    },
    "production": {
      "presets" : [["env", { "modules": false, "loose": true }], "stage-0", "react"],
      "plugins" : [["transform-runtime", { "polyfill": false }]]
    }
  }
}
